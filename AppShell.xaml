<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MarthasCoffe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MarthasCoffe"
       xmlns:views="clr-namespace:MarthasCoffe.Pages"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem Title="Configuracion">
        <Tab Title="Inicio"  Icon="iconoinicio">
            <ShellContent
                Title="Inicio"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Pedido"  Icon="pedidoicono">
            <ShellContent
                Title="Pedido"
                ContentTemplate="{DataTemplate views:CarritoPage}"
                Route="CarritoPage" />
        </Tab>
        <Tab Title="Perfil"  Icon="cuentaicono">
            <ShellContent
                Title="Mi Perfil"
                ContentTemplate="{DataTemplate views:PerfilPage}"
                Route="PerfilPage" />
        </Tab>
    </FlyoutItem>

</Shell>
